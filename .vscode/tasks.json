{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "presentation": {
                "echo": false,
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true,
            },
            "isBackground": false,
            "label": "编译测试文件",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-o0",
                "${workspaceRoot}/.temp/testLab2.cpp", // 写死调试的文件
                "${workspaceRoot}/libsponge/*.cc",
                "${workspaceRoot}/libsponge/tcp_helpers/*.cc",

                "${workspaceRoot}/libsponge/util/*.cc",
                "-o",
                "${workspaceRoot}/.temp/main.out",
                "-I",
                "${workspaceRoot}/libsponge",
                "-I",
                "${workspaceRoot}/libsponge/tcp_helpers",
                "-I",
                "${workspaceRoot}/libsponge/util",
                ""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }, 
    ],
    
}
